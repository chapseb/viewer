<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>{% trans "Bach Viewer" %} - {{ img }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="/styles/reset.css"/>
        <link rel="stylesheet" href="/styles/jquery.iviewer.css"/>
        <link rel="stylesheet" href="/styles/viewer.css"/>
    </head>
    <body>
        <section>
            <figure id="viewer">
                <header>
                    <h1>{{ img }}</h1>
                </header>
                <noscript>
                    <img src="{{ picture.getUrl() }}" alt=""/>
                </noscript>
                <select name="formats">
                {% for key, fmt in picture.getVisibleFormats() %}
                <option value="{{ key }}">{{ fmt }}</option>
                {% endfor %}
            </select>
            </figure>
            <!-- Navigation dans la série - si série il y a -->
            <!--<nav>
                <ul>
                    <li>
                    </li>
                </ul>
            </nav>-->
        </section>

        <script src="/scripts/jquery-1.9.1.min.js"></script>
        <script src="/scripts/jquery.ui.core.min.js"></script>
        <script src="/scripts/jquery.ui.widget.min.js"></script>
        <script src="/scripts/jquery.ui.mouse.min.js"></script>
        <script src="/scripts/jquery.mousewheel.js"></script>
        <script src="/scripts/jquery.iviewer.js"></script>
        {% if iip %}
        <script src="/scripts/mootools-core-1.4.5-full-nocompat.js"></script>
        <script src="/scripts/mootools-more-1.4.0.1.js"></script>
        {% endif %}
        <script src="/scripts/viewer.js"></script>
        <script>
            //no conflict jquery
            jQuery.noConflict();
            //jquery stuff
            (function($) {
                {% if not(enable_right_click) %}
                $(this).bind("contextmenu", function(e) {
                    e.preventDefault();
                });
                {% endif %}

                var viewer = $("#viewer").iviewer({
                    src: "{{ picture.getUrl() }}",
                    update_on_resize: true,
                    zoom_animation: false,
                    mousewheel: true//,
                    //onMouseMove: function(ev, coords) { },
                    //onStartDrag: function(ev, coords) { return false; }, //this image will not be dragged
                    //onDrag: function(ev, coords) { }
                });
            })(jQuery);
            //mootools stuff, if any
        </script>
    </body>
</html>
